---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";
type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name, education, skills, achievements } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col gap-8">
    <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
      <p class="w-auto text-base text-white md:pr-5 whitespace-pre-line">{description}</p>
      <div class="h-80 w-64 flex-shrink-0 rotate-[5deg] bg-white p-4 md:rotate-[7deg]">
        <Image
          class="object-cover"
          src={image}
          width="260"
          height="260"
          alt={name}
        />
      </div>
    </div>

    <div class="mt-6">
      <h3 class="text-3xl font-bold text-white mb-6 font-serif">Skills</h3>
      <div class="cyber-skills-grid">
        {Object.entries(skills).map(([category, items]) => (
          <div class="cyber-skill-card">
            <h4 class="cyber-skill-category">{category}</h4>
            <div class="cyber-skill-list">
              {items.map(skill => (
                <span class="cyber-skill-item">{skill}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>

   <div class="mt-10">
      <h3 class="text-3xl font-bold text-white mb-6 font-serif">Achievements</h3>
      <div class="achievements-grid">
        {achievements.map(item => (
          <div class="cyber-achievement-card">
            <p class="cyber-achievement-text">{item}</p>
          </div>
        ))}
      </div>
    </div>

    <div class="mt-10">
      <h3 class="text-2xl font-bold text-white mb-8 text-center font-serif">My Journey</h3>
      <div class="timeline">
        {education.map((edu, index) => (
          <div class={`timeline-item ${index % 2 === 0 ? 'timeline-item-left' : 'timeline-item-right'}`}>
            <div class="timeline-year">{edu.year}</div>
            <div class="timeline-content">
              <h4 class="font-semibold text-lg text-primary">{edu.degree}</h4>
              <p class="text-neutral text-sm">{edu.institution}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Section>