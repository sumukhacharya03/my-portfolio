  <h1 class="mb-2 font-serif text-6xl sm:text-7xl md:text-8xl font-bold tracking-tight text-white">
    <span id="typed-name"></span><span class="blinking-cursor">|</span>
  </h1>

  <!-- Specialty -->
  <p class="mb-8 font-serif text-3xl sm:text-4xl md:text-5xl font-semibold text-white">
    {specialty}
  </p>

  <!-- Summary -->
  <p class="mb-12 max-w-2xl text-lg text-neutral-300 leading-relaxed">
    {summary}
  </p>

  <!-- Social Logos -->
  <div class="flex gap-6 mb-8">
  <a 
    href="mailto:sumukh.acharya@gmail.com"
    class="transition-transform duration-200 hover:scale-120"
  >
    <img src="/icons/gmail.jpg" alt="Gmail" class="w-8 h-8 sm:w-9 sm:h-9 rounded-full" />
  </a>


    <a
      href="https://github.com/sumukhacharya03"
      target="_blank"
      rel="noopener noreferrer"
      class="transition-transform duration-200 hover:scale-120"
    >
      <img src="/icons/github.webp" alt="GitHub" class="w-8 h-8 sm:w-9 sm:h-9" />
    </a>

    <a
      href="https://www.linkedin.com/in/sumukh-acharya-6859ab312/"
      target="_blank"
      rel="noopener noreferrer"
