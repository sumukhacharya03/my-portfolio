---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { ProjectProps } from "@types";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Some of My Projects" href="projects">
  <div class="space-y-12">
    {
      projects.map(({ name, summary, image, linkSource, linkPreview, tools }, index) => (
        <div class="project-card">
          <div class="card-content grid grid-cols-1 md:grid-cols-2 gap-8 items-center">

            <div class={`content-col ${index % 2 !== 0 ? 'md:order-last' : ''}`}>

              <h3 class="mb-3 font-serif text-3xl font-medium text-white">
                {name}
              </h3>

              <div class="mb-4">
                <p class="text-sm font-semibold text-cyan-400 mb-2">Tools Used:</p>
                <div class="flex flex-wrap gap-2">

                  {tools.map(tool => (
                    <span class="tool-tag">{tool}</span>
                  ))}
                </div>
              </div>


               <p class="text-base text-neutral-300 mb-6">{summary}</p>

              <div class="flex gap-4">
                <a
                  href={linkSource}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-sm text-white/80 hover:text-white transition-colors"
                >
                  <img src="/icons/github.webp" alt="GitHub" class="h-5 w-5" />
                  <span>View on GitHub</span>
                   <span class="text-xl">↗</span>
                </a>
                {linkPreview && (
                  <a
                    href={linkPreview}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-sm text-white/80 hover:text-white transition-colors"
                  >
                    <img src="/icons/resume.png" alt="Live Demo" class="h-5 w-5" />
                    <span>Live Demo</span>
                     <span class="text-xl">↗</span>
                  </a>
                )}
              </div>

             </div>

            <div class="image-col group">
               <a href={linkSource} target="_blank" rel="noopener noreferrer">
                <Image
                    class="project-image"
                    src={image}

                                   alt={name}
                    width="736"
                    height="483"
                />
               </a>
            </div>


                   </div>
        </div>
      ))
    }
  </div>
</Section>

<style>
  .project-card {
    background: rgba(10, 10, 20, 0.6);
    border-radius: 16px;
    padding: 2px;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .project-card::before {
    content: '';
    position: absolute;
    top: 0; right: 0; bottom: 0; left: 0;
    z-index: -1;
    margin: -2px;
    border-radius: inherit;
    background: conic-gradient(
      from 180deg at 50% 50%,
      #1f005c, #003666, #00766c, #a88a00, #ff0000, #c300c3, #6a00ff, #1f005c
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    animation: rotate 6s linear infinite paused;
  }

  .project-card:hover::before {
    opacity: 1;
    animation-play-state: running;
  }

  .card-content {
    background: #111116;
    border-radius: 14px;
    padding: 2rem;
  }

  .tool-tag {
    background: rgba(255, 255, 255, 0.1);
    color: #a5b4fc;
    /* Indigo-300 */
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .image-col {
    border-radius: 12px;
    overflow: hidden;
  }

  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
    transition: transform 0.4s ease, filter 0.4s ease;
  }

  .image-col:hover .project-image {
    transform: scale(1.05);
    filter: brightness(1.1);
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg);
  }
  }
</style>